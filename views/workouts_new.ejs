<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet"  type="text/css" href="/main.css" />
    <title>Log Workout</title>
</head>
<body>
  <h1>Log a Workout</h1>

  <form method="POST" action="/workouts">
    <p>
      <label>Date:</label>
      <input type="date" name="workout_date" required>
    </p>

    <p>
      <label>Workout name:</label>
      <input type="text" name="workout_name" placeholder="Push day, legs, etc." required>
    </p>

    <p>
      <label>Notes:</label><br>
      <textarea name="notes" rows="3" cols="40"></textarea>
    </p>

    <h3>Exercise</h3>

    <p>
      <label>Exercise:</label>
      <select name="exercise_id" required>
        <option value="">Select exercise</option>
        <% exercises.forEach(function(ex) { %>
          <option value="<%= ex.id %>"><%= ex.name %></option>
        <% }) %>
      </select>
    </p>

    <p>
      <label>Sets:</label>
      <input type="number" name="sets" min="1" required>
    </p>

    <p>
      <label>Reps:</label>
      <input type="number" name="reps" min="1" required>
    </p>

    <p>
      <label>Weight (kg):</label>
      <input type="number" step="0.5" name="weight" min="0" required>
    </p>

    <button type="submit">Save workout</button>
  </form>

  <p><a href="/workouts">Back to my workouts</a></p>
</body>
</html>